<div class="container">

  <h1><%= @cocktail.name.capitalize %></h1>


  <div class="row">
      <% @cocktail.doses.each do |dose|  %>
      <div class="col-xs-12 col-sm-4">
        <%= dose.description %> <%= dose.ingredient.name %>
        <%= link_to  dose_path(dose) ,method: :delete, data: { confirm: 'Are you sure ?'} do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        <% end  %>
      </div>
      <% end  %>
  </div>
  <div class="row">
      <div class="col-xs-12 col-sm-4">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    </div>
  </div>


<div class="button text-center">
  <%= link_to "All cocktails", cocktails_path, class:"btn btn-primary" %>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class:"btn btn-primary" %>
</div>


</div>



